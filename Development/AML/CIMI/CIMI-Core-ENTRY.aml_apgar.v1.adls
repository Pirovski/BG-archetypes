			>
			["at0.29"] = <
				text = <"List">
				description = <"@ internal @">
			>
			["at0.30"] = <
				text = <"Notes on measurement">
				description = <"Notes on measurement of the Apgar score.">
			>
			["at0.31"] = <
				text = <"10 minute">
				description = <"Apgar score 10 minutes after birth.">
