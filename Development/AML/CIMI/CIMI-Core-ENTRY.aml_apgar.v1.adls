			>
			["at0.25"] = <
				text = <"Total">
				description = <"The sum of the 5 ordinal scores for each component parameter.">
			>
			["at0.26"] = <
				text = <"2 minute">
				description = <"Apgar score 2 minutes after birth.">
			>
			["at0.27"] = <
				text = <"3 minute">
				description = <"Apgar score 3 minutes after birth.">
			>
