definition
	EVALUATION[at0000] matches {
		data matches {
			ITEM_TREE matches {
				items matches {
					CLUSTER[at0001] matches {
						items matches {
							use_node ELEMENT[at0004] /data/items[at0001]/items[at0002]
							allow_archetype CLUSTER[at0003] matches {
								include
									archetype_id/value matches {/.*/}
							}
							ELEMENT[at0002] matches {*}
						}
					}
				}
			}
		}
	}

